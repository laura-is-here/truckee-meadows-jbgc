---
layout: layouts/base.njk
section: post
---

<article class="container max-w-screen-lg mx-auto markdown">
  <div class="bg-gray-200 -mt-8 p-8 container max-w-screen-md ">
    <p class="font-semibold ">
      <time datetime="{{ post.date | machineDate }}">
        <small>{{ date | readableDate }}</small>
      </time>
    </p>
    <h1 class="text-2xl leading-tight mb-2">{{ title }}</h1>

    {{ layoutContent | safe }}
    {% if tags %}
    <p class="mb-2">
      {% for tag in tags %} {%- if tag != "post" -%} {% set tagUrl %}/tags/{{
        tag
      }}/{% endset %}
      <a
        href="{{ tagUrl | url }}"
        rel="tag"
        class="text-gray-700 hover:text-gray-900"
        ><small>{{ tag }}</small></a
      >
      {%- endif -%} {% endfor %}
    </p>
    {% endif %}
    <nav>
      <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
    </nav>
  </div>
</article>
