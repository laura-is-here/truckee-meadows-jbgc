<!DOCTYPE html>
<html
  class="text-lg font-serif text-gray-800 bg-gray-100 leading-relaxed antialiased" {% if section %}data-current="{{ section }}"{% endif %} lang="en">
  {% include "components/head.njk" %}
  <body>
    <header class="bg-black text-gray-200 p-8 flex flex-col justify-between items-start">
      <img src="{{ metadata.image }}" alt="{{ metadata.image_description }}" class="h-24 md:h-40 my-4 ml-auto mr-4" />
      <div class="mb-12 container max-w-screen-lg mx-auto">
        <p class="text-2xl md:text-4xl leading-none border-b-4 border-gray-200 py-4 font-bold">{{ metadata.title }}</p>
        {% include "components/nav.njk" %}
      </div>
    </header>
    <main>
      {{ content | safe }}
    </main>
    {% include "components/footer.njk" %}
    <script src="{{ metadata.baseURL }}/_includes/assets/js/script.js"></script>
    <script src="https://code.iconify.design/1/1.0.4/iconify.min.js"></script>
  </body>
</html>
